<% if !signed_in? %>

<div class="alert alert-danger">Devi essere loggato come professore per visualizzare questa pagina!</div>

<% else %>

<div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
  
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <div class="panel panel-info" >
    <div class="panel-heading" style="color:#FFFFFF; background-color: #337ab7; border-color: #04779b;">
      <div class="panel-title">Inserimento nuova tesi</div>
    </div>     

    <div style="padding-top:30px" class="panel-body" >

      <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

        <%= form_for([@professor, @professor.arguments.build ]) do |f| %>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-education"></i></span>
          <%= f.text_field :titolo, class: 'form-control', :placeholder => "titolo", :required => true %>                                        
        </div>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
          <%= f.text_field :descrizione, class: 'form-control', :placeholder => "descrizione", :required => true %>                                        
        </div>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-list-alt"></i></span>
 
     
          <%= f.select :tipologia, options_for_select(['Sperimentale', 'Compilativa', 'Progettuale'], :selected => 'Sperimentale'), {}, {:class => 'form-control', required: 'true', :placeholder => "tipologia"} %>                               
        </div>


        <div style="margin-top:10px" class="form-group">
          <!-- Button -->

          <div class="col-sm-12 controls">
            <%= f.submit "Inserisci", class: "btn btn-primary" %>
          <% end %>

          </div>
        </div>


      
         



    </div>                     
  </div>  
</div>

<% end %>