<div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
  
  <% flash.each do |key, value| %>
      <div style ="margin-top: -40px" class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <div class="panel panel-info" >
    <div class="panel-heading" style="color:#FFFFFF; background-color: #337ab7; border-color: #04779b;">
      <div class="panel-title">Inserimento nuova tesi</div>
    </div>     

    <div style="padding-top:30px" class="panel-body" >

      <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

        <%= form_for(:argument, url: arguments_path) do |f| %>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :titolo, class: 'form-control', :placeholder => "titolo", :required => true %>                                        
        </div>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :descrizione, class: 'form-control', :placeholder => "descrizione", :required => true %>                                        
        </div>

        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-education"></i></span>
          <%= f.text_field :tipologia, class: 'form-control', :placeholder => "tipologia", :required => true %>                                        
        </div>


        <div style="margin-top:10px" class="form-group">
          <!-- Button -->

          <div class="col-sm-12 controls">
            <%= f.submit "Inserisci", class: "btn btn-primary" %>
          <% end %>

          </div>
        </div>


      
         



    </div>                     
  </div>  
</div>