<h1>Listing students</h1>
 
<table>
  <tr>
    <th>Nome</th>
    <th>Cognome</th>
    <th colspan="3"></th>
  </tr>
 
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.surname %></td>
      <td><%= link_to 'Mostra', student_path(student) %></td>
      <td><%= link_to 'Modifica', edit_student_path(student) %></td>
      <td><%= link_to 'Cancella', student_path(student),
              method: :delete,
              data: { confirm: 'Sei sicuro?' } %></td>
    </tr>
  <% end %>
</table>

